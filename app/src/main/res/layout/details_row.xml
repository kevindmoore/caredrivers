<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

<ImageView
    android:id="@+id/iconType"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/diamond"
    android:contentDescription="@string/dropOff_icon_description" />

  <TextView
    android:id="@+id/dropOffLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="@string/dropOff"
    app:layout_constraintStart_toEndOf="@+id/iconType"
    app:layout_constraintTop_toTopOf="@+id/iconType" />

  <TextView
    android:id="@+id/dropOffLocation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/iconType"
    app:layout_constraintTop_toBottomOf="@+id/dropOffLabel"
    tools:text="3345 Wilshire, Los Angeles, CA" />


</androidx.constraintlayout.widget.ConstraintLayout>